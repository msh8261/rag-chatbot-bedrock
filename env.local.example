# Application Environment Variables for Local Development
# Copy this file to .env for local development
# Only application-specific variables - AWS infrastructure is managed by Terraform

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API Gateway URL for local frontend to connect to backend
API_GATEWAY_URL=https://your-api-gateway-url.execute-api.region.amazonaws.com/prod

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# These are needed for local backend testing (normally set by Terraform in production)

# DynamoDB table name
DYNAMODB_TABLE_NAME=rag-chatbot-conversations-dev

# S3 bucket for documents
S3_BUCKET_NAME=rag-chatbot-documents-dev

# OpenSearch endpoint
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com

# Bedrock model ID
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment identifier
ENVIRONMENT=dev

# Debug mode for local development
DEBUG=true

# Logging level
LOG_LEVEL=DEBUG

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
# Streamlit-specific settings for local development

STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
# Feature flags for local development

ENABLE_CHAT_HISTORY=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_USER_AUTHENTICATION=false
ENABLE_RATE_LIMITING=false
ENABLE_INPUT_VALIDATION=true
ENABLE_RESPONSE_CACHING=false
